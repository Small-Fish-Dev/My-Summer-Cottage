@using Sandbox;
@using Sandbox.UI;

@namespace Sauna
@inherits Panel
@attribute [StyleSheet]

<root class="@(GradientLeft ? "left" : "") @(Slot.ToString())">
	<div class="icon-container">
		<img class="icon" src=@GetSlotIcon() />
	</div>

	<div class="text-container">
		<label>@Slot.ToString()</label>
	</div>
</root>

@code {
	public bool GradientLeft { get; set; }
	public EquipSlot Slot { get; set; }

	private string GetSlotIcon()
	{
		var path = "/ui/hud/" + Slot switch
		{
			EquipSlot.Head => "clothes_face.png",
			EquipSlot.Face => "clothes_face.png",
			EquipSlot.Body => "clothes_torso.png",
			EquipSlot.Legs => "clothes_legs.png",
			EquipSlot.Feet => "clothes_boots.png",
			EquipSlot.Hand => "hand_slot.png",
		};
		return path;
	}

	protected override int BuildHash()
	{
		return HashCode.Combine( GradientLeft, Slot );
	}
}
