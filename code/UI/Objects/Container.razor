@using Sandbox;
@using Sandbox.UI;

@namespace Sauna
@inherits Panel

<style>
	Container {
		position: absolute;
		overflow: visible;
		top: 30%;
		left: 20%;
		transform: perspective(850px) rotateX(50deg);
		flex-direction: column;
		opacity: 0;

		.root {
			transform: translateY(-64px);
			height: @(size)px;
			width: @(size)px;
			background-color: #916b4f;
			padding: 5px 5px;

			.container {
				width: 100%;
				height: 100%;
				background-color: #523b2d;
			}
		}

		.bottom {
			height: 64px;
			width: @(size)px;
			transform: translateZ(-128px) translateY(128px) rotateX(90deg);
			background-color: orange;
		}

		&.visible {
			opacity: 1;
		}
	}
</style>

<root>
	<panel class="root">
		<panel class="container">
		</panel>
	</panel>

	<panel class="bottom" />
</root>

@code {
	private float size => 64f * 6f + 20f;

	public override void Tick()
	{
		if ( Input.Pressed( InputButton.Score ) )	
			SetClass( "visible", !HasClass( "visible" ) );
	}
}
