@namespace Sauna.UI
@attribute [StyleSheet]
@inherits Panel

<root class="@(IsLocked ? "locked" : "")" onclick=@(() => { if (!IsLocked) OnFishClick(Definition); })>
	<div class="border"/>
	<div class="background"/>
	<img src=@Definition.Icon.ResourcePath/>
</root>

@code {
	public bool IsLocked { get; set; }
	public Action<FishLog.FishInfo> OnFishClick { get; set; }
	public FishLog.FishInfo Definition { get; set; }

	protected override int BuildHash()
	{
		return HashCode.Combine(IsLocked);
	}
}
