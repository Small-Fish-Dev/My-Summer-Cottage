@namespace Sauna.UI
@attribute [StyleSheet]
@inherits Panel

<root>
	<div class="main">
		<div class="icon"></div>
		<div class="text-container">
			<div style="flex-direction: row-reverse">
				<div class="task-type">
					Primary Task
				</div>
			</div>

			<div style="flex-direction: row-reverse">
				<div class="task-title">
					Dude, Where Is My Car
				</div>
			</div>

			<div style="flex-direction: row-reverse">
				<div class="task-description">
					Where the fuck is my car?! Where do I start the investigation?
					Let's see if my neighbors saw anything weird this night. I don't like them though.
				</div>
			</div>
		</div>
	</div>
	<div class="footer">
		<div class="text-container">
			<div style="flex-direction: row-reverse">
				<div class="instruction">
					Hold X for all current tasks
				</div>
			</div>
		</div>
	</div>
</root>
