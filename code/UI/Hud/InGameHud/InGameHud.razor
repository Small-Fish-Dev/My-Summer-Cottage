@namespace Sauna.UI
@attribute [StyleSheet]
@inherits Panel

@* Anything that is always active and displayed to the player when ingame. *@
<root>
	<InteractionHint class="hold-hints" FromHands=@true />
	<InteractionHint />

	<Subtitles />
	<Compass GameTimeManager="@Hud.Instance.GameTimeManager" />
	<Date GameTimeManager="@Hud.Instance.GameTimeManager" />
	<PrimaryTask />
	<Crosshair />
	<ExperienceBar style="position: absolute; top: 250px; width: 400px;" />
</root>

@code {
	public static InGameHud Instance { get; private set; }

	public InGameHud()
	{
		Instance = this;
	}
}
