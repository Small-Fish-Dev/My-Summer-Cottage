@namespace Sauna.UI
@attribute [StyleSheet]
@using Sauna.Game
@inherits Panel

<root>
	<div class="item">
		<div class="icon day"></div>
		<div class="text-container">
			<div class="title">day</div>
			<div class="value">@(GameTimeManager.Day + 1)</div>
		</div>
	</div>
	<div class="item">
		<div class="icon money"></div>
		<div class="text-container">
			<div class="title">balance</div>
			<div class="value">@($"{Player.Local.Money}mk")</div>
		</div>
	</div>
</root>

@code {
	public GameTimeManager GameTimeManager { get; set; }

	protected override int BuildHash()
	{
		return HashCode.Combine( GameTimeManager.Day, Player.Local.Money );
	}
}
