@namespace Sauna.UI
@attribute [StyleSheet]
@inherits Panel

<root>
	@if (!string.IsNullOrEmpty( Hint ))
	{
		<div class="hint">
			<text>@Hint</text>
		</div>
	}
	<div class="input @(DarkMode ? "dark" : "")">
		<text style="bottom: 1px;">@(!string.IsNullOrEmpty( Input ) ? Sandbox.Input.GetButtonOrigin( Input ) : "?")</text>
	</div>
</root>

@code {
	public string Hint { get; set; }
	public string Input { get; set; }
	public bool DarkMode { get; set; }

	protected override int BuildHash()
	{
		return HashCode.Combine(Hint?.GetHashCode(), Input?.GetHashCode(), DarkMode);
	}
}
