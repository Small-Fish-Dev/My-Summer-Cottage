@namespace Sauna.UI
@attribute [StyleSheet]
@inherits ScenePanel

<root>
	<div class="name">
		<text>First Name</text>
		<text>Really long last name</text>
	</div>
</root>

@code {
	public CharacterRenderer()
	{
		var sceneWorld = new SceneWorld();
		_ = new SceneDirectionalLight( sceneWorld, Rotation.Identity, Color.White );
		_ = new SceneModel( sceneWorld, "models/guy/guy.vmdl", new Transform(new Vector3(70, 0, -30), Rotation.From(0, 170, 0)) );
		World = sceneWorld;
	}
}
