@namespace Sauna.UI
@attribute [StyleSheet]
@inherits Panel

<root>
	<div class="border" />
	<div class="background" />
	@if (Item is not null)
	{
		<div class="item">
				<img src=@Item.IconTexture.ResourcePath />
				<text class="weight">@Item.WeightInGrams.ToKilograms() kg</text>
		</div>
	}
	@if (Slot is not null)
	{
		<img class="slot" src=@Slot?.GetIcon() />
	}
</root>

@code {
	public ItemComponent Item { get; set; }
	public EquipSlot? Slot { get; set; } = null;

	protected override int BuildHash()
	{
		return HashCode.Combine(Item?.GetHashCode());
	}
}
