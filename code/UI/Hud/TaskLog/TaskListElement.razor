@namespace Sauna.UI
@attribute [StyleSheet]
@inherits Panel

<root class=@(SelectedTask?.ResourceId == TaskElement.ResourceId ? "selected" : "")>
	<img class="task-img" src="ui/hud/task_completed.png" />
	<div class="task-details">
		<text class="task-title">@TaskElement.Name</text>
		<text class="task-subtitle">@TaskElement.Subtitle</text>
	</div>
</root>

@code {
	public SaunaTask SelectedTask { get; set; }
	public SaunaTask TaskElement { get; set; }

	protected override int BuildHash()
	{
		return HashCode.Combine(TaskElement.Name, TaskElement.Subtitle, SelectedTask?.ResourceId);
	}
}
