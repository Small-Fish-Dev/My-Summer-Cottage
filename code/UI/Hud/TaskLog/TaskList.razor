@namespace Sauna.UI
@attribute [StyleSheet]
@inherits Panel

<root>
	<text class="title-container">TASKS JOURNAL</text>
	<div class="tasks">
		<div class="heading">TODO SEPERATE HEADINGS</div>
		@foreach(var task in TaskMaster.Tasks)
		{
			<TaskPanel Task=@task />
		}
	</div>
</root>

@code {
	protected override int BuildHash()
	{
		return HashCode.Combine(TaskMaster.Tasks.HashCombine((t) => t.ResourceId));
	}
}
